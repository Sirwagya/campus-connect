# ===========================================
# Campus Connect Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Your Supabase project URL (e.g., https://xxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anonymous/public key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Your Supabase service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Session secret for JWT signing (must be at least 32 characters)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-at-least-32-chars

# Encryption key for sensitive data (must be exactly 32 characters)
# Generate with: openssl rand -base64 24 | head -c 32
ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Allowed email domain for authentication (e.g., vedamsot.org)
ALLOWED_DOMAIN=vedamsot.org

# ===========================================
# OPTIONAL: GITHUB INTEGRATION
# ===========================================
# Personal access token for GitHub API (for profile integrations)
# Create at: https://github.com/settings/tokens
GITHUB_ACCESS_TOKEN=your-github-personal-access-token

# ===========================================
# OPTIONAL: DEVELOPMENT
# ===========================================
# Set to 'development' for local development
NODE_ENV=development
